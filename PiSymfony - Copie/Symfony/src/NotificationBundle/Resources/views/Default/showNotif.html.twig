{% extends 'base.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}
 {% block js %}
     <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
 {% endblock %}
{% block NavName %} Notifications {% endblock %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="card">
                <center><p class="card-category">
                    You have <b>{{ rowNumber }}</b> notifications <!--Number of notifications will be retrieved from DB -->
                </p></center>
                <div class="card-header">
                </div>
                <div class="card-body">
                    <div class="row">
                        <!--This Block will be rendered many times-->
                        {% for notif in listNotif %}
                        <div class="col-sm-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Someone want your service</h5>
                                    <p class="card-text">{{ notif.getContent }}</p>
                                    <a href="#" class="btn btn-primary">Go somewhere</a>
                                    <a href="{{path('fos_message_thread_reply',{'recipient':notif.idpropc})}}"><img src="{{asset('img/notification/send.png')}}" style="width:30px;float:right;"></a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
            </div>
{% endblock %}
{% block notifCount %}{{ rowNumber }}{% endblock %}

