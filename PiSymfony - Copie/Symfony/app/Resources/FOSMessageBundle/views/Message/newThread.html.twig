{% extends '@FOSMessage/layout.html.twig' %}

{% block fos_message_content %}

<h2 style="margin-left:15px;">Send New Message</h2>

<form action="{{ url('fos_message_thread_new') }}" method="post">
    {{form_start(form)}}
    <div class="form-group mx-sm-3 mb-2">
    <label for="message_recipient">Recipient</label>
    {{ form_widget(form.recipient,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class="form-group mx-sm-3 mb-2">
    <label for="subject">Subject</label>
    {{ form_widget(form.subject,{'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group mx-sm-3 mb-2">
    <label for="body">Body</label>
    {{ form_widget(form.body,{'attr':{'class':'form-control'}}) }}</div>

    <div class="form-group mx-sm-3 mb-2">

    <button type="submit" class="btn btn-outline-primary form-control" >Send</button>
    </div>
        {{form_end(form)}}


</form>


{% endblock %}
